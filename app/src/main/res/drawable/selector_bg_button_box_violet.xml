<?xml version="1.0" encoding="utf-8"?><!-- 按钮背景色 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" android:state_pressed="false">
        <shape>
            <solid android:color="@color/button_background_disenabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_background_pressed" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/button_background_normal" />
        </shape>
    </item>

</selector>